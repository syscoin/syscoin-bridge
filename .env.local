# Copy and paste this into syscoin-bridge/.env.local

# Network Configuration
NEXT_PUBLIC_IS_TESTNET=false
NEXT_PUBLIC_CHAIN_ID=0x39

# RPC URLs
NEVM_RPC_URL=https://rpc.syscoin.org
UTXO_RPC_URL=https://blockbook.syscoin.org

# Explorer URLs  
NEVM_EXPLORER=https://explorer.syscoin.org
UTXO_EXPLORER=https://blockbook.syscoin.org

# Blockbook API URL
NEXT_PUBLIC_BLOCKBOOK_API_URL=https://blockbook.syscoin.org

# Contract Addresses (Mainnet)
RELAY_CONTRACT_ADDRESS=0xd714E7915362FF89388025F584726E6dF26D20f9
ERC20_MANAGER_CONTRACT_ADDRESS=0x7904299b3D3dC1b03d1DdEb45E9fDF3576aCBd5f

# Bridge Configuration
MINIMUM_AMOUNT=100

# Feature Flags
PALI_V2_NEVM_ENABLED=true
SYS5_ENABLED=true

# Development - you can set these to any value for local dev
MONGODB_URI=mongodb://admin:admin@127.0.0.1:27017/syscoin-bridge
SECRET_COOKIE_PASSWORD=development-secret-at-least-32-characters-long
ADMIN_API_KEY=dev-admin-keyNEXT_PUBLIC_NEVM_RPC_URL=https://rpc.syscoin.org

